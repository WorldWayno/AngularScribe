@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4 affix" id="login-panel">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please sign in</h3>
            </div>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="E-mail" name="email" type="text" required />
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="password" type="password" value="" required />
                        </div>
                        <button type="button" class="btn btn-lg btn-primary btn-block" id="login-btn">Login</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12" id="conent-panel" style="display: none" ng-controller="indexController">
        <h4>Conent</h4>
        <kendo-grid options="gridOptions"></kendo-grid>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/app/indexController.js"></script>
    <script type="text/javascript">
        $(function() {
            $('#login-btn').click(function() {
                console.log("click");
                $("#login-panel").toggle("slow", function() {
                    $("#conent-panel").show();
                });
            });

        })
    </script>
}
